@model MVC_PassandoParamentroDeumaTelaParaUtra.Models.Usuario

@{
    ViewData["Title"] = "Login";
}

<h1>Login</h1>

<h4>Usuario</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" class="form-control" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Login" class="control-label"></label>
                <input asp-for="Login" class="form-control" id="login" />
                <span asp-validation-for="Login" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Senha" class="control-label"></label>
                <input asp-for="Senha" class="form-control" />
                <span asp-validation-for="Senha" class="text-danger"></span>
            </div>
            <div class="form-group">
                <a id="EsqueciSenha" href="#">Esqueci Senha</a>
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
        <script>
            // Captura o clique no link e redireciona para a página de destino com o valor do input na QueryString
            document.getElementById('EsqueciSenha').addEventListener('click', function () {
                var valorInput = document.getElementById('login').value;
                var urlDestino = '@Url.Action("AlterarSenha", "Home")' + '?login=' + encodeURIComponent(valorInput);
                window.location.href = urlDestino;
            });
        </script>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
